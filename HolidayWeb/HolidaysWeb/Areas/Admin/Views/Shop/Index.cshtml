@section scripts{
    <!--日历相关-->
    <script src="~/Framework/PriceCalendarp/js/mock-data.js"></script>
    <script src="~/Framework/PriceCalendarp/js/calendar-price-jquery.js"></script>
    <!--日历相关over-->
    <script src="~/Framework/webuploader-0.1.5/webuploader.min.js"></script>

    <script type="text/javascript">
        var shopApp = angular.module('shopApp', []);
        shopApp.controller('ShopListController', function ShopListController($scope, $http) {

            $("#editShopModal").on("shown.bs.modal", function () {
                fnUploadImage("btnUploadImg", function (url) {
                    $("#ShopImgs").attr("src", url);
                    $("input[name='ShopImgs']").val(url);
                });
                fnUploadImage("btnUploadImg1", function (url) {
                    //$("#ShopImgs").attr("src", url);
                    //$("input[name='ShopImgs']").val(url);
                    var tempList = $scope.ShowImageList;
                    if (tempList.length == 0) {
                        tempList.push(url);
                    } else {
                        tempList.push(url);
                    }
                    $scope.ShowImageList = tempList;
                    if ($(".ShopImgs:last").length == 0) {
                        $("#img_div").append("<img class='ShopImgs'  width='400' height='230' src='" + url + "' alt='店铺图片' />");
                    } else {
                        $(".ShopImgs:last").before("<img class='ShopImgs'  width='400' height='230' src='" + url + "' alt='店铺图片' />");
                    }

                    $("#editShopModal").modal();
                });
            }).on("hide.bs.modal", fnDestroyUploader);

            $scope.initShopList = function (page) {
                var shopName = $("input[name='shopName']").val();
                var data = { page: page, shopName: shopName };

                $http({
