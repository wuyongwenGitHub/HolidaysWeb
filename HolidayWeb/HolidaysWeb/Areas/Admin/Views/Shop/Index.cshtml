@{
    ViewBag.Title = "店铺管理";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section styles{
    <link href="~/Framework/webuploader-0.1.5/webuploader.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Framework/PriceCalendarp/css/calendar-price-jquery.min.css" />
    <style>
        #cha_img {
            position: absolute;
            top: 0px;
            right: 0px;
            width: 20px;
            height: 20px;
        }
    </style>
}


<div ng-app="shopApp" ng-controller="ShopListController" ng-init="initShopList(1)" class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>店铺管理</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <button ng-click="openAddShopModal()" class="btn btn-danger">添加店铺</button>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="row">
            <form class="form-horizontal form-label-left">
                <div class="col-md-3"><input name="shopName" type="text" class="form-control" placeholder="店铺名称,景区名称,房东" /></div>
                <div class="col-md-3"><button type="button" ng-click="initShopList(1)" class="btn btn-default">查询</button></div>
            </form>
        </div>
        <div class="x_content">
            <table id="datatable" class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>店铺名称</th>
                        <th>风格</th>
                        <th>景点名称</th>
                        <th>地址</th>
                        <th>起订价格</th>
                        <th>评分</th>
                        <th>房东</th>
                        <th>发布时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="shop in shopList">
                        <td>{{ $index + 1 }}</td>
                        <td>{{ shop.ShopName }}</td>
                        <td>{{ shop.ShopTypeName }}</td>
                        <td>{{ shop.SpotName }}</td>
                        <td>{{ shop.Locations }}</td>
                        <td>{{ shop.StartPrice }}</td>
                        <td>{{ shop.Scores }}</td>
                        <td>{{ shop.UserName }}</td>
                        <td>{{ shop.CreateOn }}</td>
                        <td>
                            <a href="javascript:;" ng-click="openViewShopModal(shop)" title="查看" class="fa fa-eye btn-xs"></a>
                            <a href="javascript:;" ng-click="openEditShopModal(shop)" title="编辑" class="fa fa-edit btn-xs"></a>
                            <a href="javascript:;" ng-click="del(shop.ID)" title="删除" class="fa fa-trash btn-xs"></a>
                            <a href="javascript:;" ng-hide="{{shop.State == 0}}" ng-click="down(shop.ID)" title="下架" class="fa fa-arrow-circle-o-down btn-xs"></a>
                            <a href="javascript:;" ng-hide="{{shop.State == 1 || shop.State == -1}}" ng-click="up(shop.ID)" title="上架" class="fa fa-arrow-circle-o-up btn-xs"></a>
                        </td>
                    </tr>
                    <tr ng-if="shopList.length == 0">
                        <td colspan="6" align="center">暂无数据</td>
                    </tr>

                </tbody>
            </table>
        </div>
        <div ng-hide="PageModel.TotalPage == 0" class="row">
            <div class="col-md-12 col-sm-12">
                <div>
                    <ul class="pagination">
                        <li class="paginate_button previous"><a ng-click="initShopList(1)" href="javascript:;">首页</a></li>
                        <li class="paginate_button"><a ng-click="initShopList(pageModel.PreviousPage)" href="javascript:;">上一页</a></li>

                        <li class="paginate_button" ng-class="{true: 'active'}[PageModel.CurrentPage == pageBar]" ng-repeat="pageBar in PageModel.PageBar">
                            <a ng-click="initShopList(pageBar)" href="javascript:;">{{ pageBar }}</a>
                        </li>
                        <li class="paginate_button"><a href="javascript:;" ng-click="initShopList(PageModel.NextPage)">下一页</a></li>
                        <li class="paginate_button next" id="datatable-checkbox_next"><a ng-click="initShopList(PageModel.TotalPage)" href="javascript:;">尾页</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!--编辑店铺信息窗口-->
    <div id="editShopModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">x</span>
                    </button>
                    <h4 class="modal-title">编辑店铺信息</h4>
                </div>
                <div class="modal-body">
                    <form id="form1" class="form-horizontal form-label-left" novalidate>
                        <input name="ID" type="hidden" value="{{  Shop.ID }}" />
                        <input name="IsCheck" type="hidden" value="{{  Shop.IsCheck }}" />
                        <input name="State" type="hidden" value="{{  Shop.State }}" />
                        <input name="IsDel" type="hidden" value="{{  Shop.IsDel }}" />
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="ShopName">
                                店铺名称 <span class="required">*</span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <input ng-model="Shop.ShopName" name="ShopName" class="form-control col-md-7 col-xs-12" maxlength="100" type="text" />
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="ShopTypeName">
                                风格<span class="required">*</span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <input name="ShopType" type="hidden" value="{{ Shop.ShopType }}" />
                                <select class="form-control" ng-model="Shop.ShopType" ng-options="shopCategory.ID as shopCategory.CategoryName for shopCategory in shopCategoryList"></select>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="PhoneNo">
                                房东电话<span class="required">*</span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <input ng-model="Shop.PhoneNo" name="PhoneNo" class="form-control col-md-7 col-xs-12" maxlength="11" type="text" />
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="SpotName">
                                景点名称<span class="required">*</span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <input name="SpotId" type="hidden" value="{{ Shop.SpotId }}" />
                                <select class="form-control " ng-model="Shop.SpotId" ng-options="scenicSpot.ID as scenicSpot.ScenicSpotName for scenicSpot in scenicSpotList"></select>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="COORDINATE">
                                经纬度<span class="required">*</span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <input ng-model="Shop.COORDINATE" name="COORDINATE" placeholder="经度,纬度" class="form-control col-md-7 col-xs-12" type="text" />
                                <a target="_blank" href="http://lbs.amap.com/console/show/picker" style="text-decoration: underline">获取经纬度</a>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="ShopImgs">
                                店铺图片 <span class="required">*</span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <input name="ShopImgs" value="{{ Shop.ShopImgs }}" class="form-control col-md-7 col-xs-12" type="hidden" />
                                <img id="ShopImgs" width="130" height="130" src="{{ Shop.ShopImgs }}" alt="店铺图片" />
                                <br /><br />
                                <div id="btnUploadImg">选择图片</div>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for=""></label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                请上传分辨率为 130*130 的照片
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="ShopImgs">
                                店铺介绍图片 <span class="required">*</span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <input id="showImageList" name="imageIntroduce" value="" class="form-control col-md-7 col-xs-12" type="hidden" />
                                <div id="img_div" style="position: relative;">
                                    <img class="ShopImgs" src="{{ item }}" alt="店铺图片" ng-repeat="item in ShowImageList" />
                                    @*<img src="~/Images/cha.png" id="cha_img"  ng-click="onDeleteImage(item,Shop.ID)" />*@
                                </div>
                                <br /><br />
                                <div id="btnUploadImg1">选择图片</div>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for=""></label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                请上传分辨率为 400*230 的照片
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="StartPrice">
                                起订价格(元)<span class="required">*</span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <input ng-model="Shop.StartPrice" name="StartPrice" maxlength="20" class="form-control col-md-7 col-xs-12" type="text" />
                            </div>
                            @*<div style="height:35px;line-height:35px">
                                    <a href="#" ng-click="openPriceCalendarModal(shop)">价格日历</a>
                                </div>*@
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="Scores">
                                评分<span class="required">*</span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <input ng-model="Shop.Scores" name="Scores" maxlength="20" class="form-control col-md-7 col-xs-12" type="text" />
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="SortBy">
                                显示顺序
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <input ng-model="Shop.SortBy" name="SortBy" class="form-control col-md-7 col-xs-12" type="number" />
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="SortBy">
                                店铺评价
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <textarea ng-model="Shop.Tags" name="Tags" class="form-control col-md-7 col-xs-12" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for=""></label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                请用“,”分隔
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="Locations">
                                地址<span class="required">*</span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <textarea ng-model="Shop.Locations" name="Locations" class="form-control col-md-7 col-xs-12" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="About">
                                房源介绍<span class="required">*</span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <textarea ng-model="Shop.About" name="About" class="form-control col-md-7 col-xs-12" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="Rules">
                                房客守则<span class="required">*</span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <textarea ng-model="Shop.Rules" name="Rules" class="form-control col-md-7 col-xs-12" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="ChargesNotes">
                                收费说明<span class="required">*</span>
                            </label>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <textarea ng-model="Shop.ChargesNotes" name="ChargesNotes" class="form-control col-md-7 col-xs-12" rows="3"></textarea>
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" ng-click="saveShop()" class="btn btn-primary">保存</button>
                </div>
            </div>
        </div>
    </div>

    <!--查看店铺信息-->
