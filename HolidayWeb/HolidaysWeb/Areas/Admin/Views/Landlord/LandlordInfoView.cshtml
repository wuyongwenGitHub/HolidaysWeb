@model Holidays.Model.Entites.UserInfoExtView

@{
    ViewBag.Title = "房东信息";
    Layout = null;
}

<link href="~/Framework/layui2/css/layui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script src="~/Framework/layui2/layui.all.js"></script>


<div class="layui-container">
    <div class="layui-row">
        <div class="layui-col-md12">
            <form id="form1" lay-filter="form1" class="layui-form" style="margin:10px;">
                <input type="hidden" name="ID" value="@Model.ID" />
                <div class="layui-form-item">
                    <label class="layui-form-label">头像</label>
                    <div class="layui-input-block">
                        <img width="150" height="150" src="@Model.Img" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">房东姓名</label>
                    <div class="layui-input-block">
                        <input class="layui-input" value="@Model.Username" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">性别</label>
                    <div class="layui-input-block">
                        @if (Model.Gender == 0)
                        {
                            <input class="layui-input" value="男" />
                        }
                        else if (Model.Gender == 1)
                        {
                            <input class="layui-input" value="女" />
                        }
                        else
                        {
                            <input class="layui-input" value="保密" />
                        }
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">登录账号</label>
                    <div class="layui-input-block">
                        <input class="layui-input" value="@Model.LoginAccount" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">手机号</label>
                    <div class="layui-input-block">
                        <input class="layui-input" value="@Model.PhoneNo" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">备用手机号</label>
                    <div class="layui-input-block">
                        <input class="layui-input" value="@Model.PhoneNo2" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">邮箱</label>
                    <div class="layui-input-block">
                        <input class="layui-input" value="@Model.Email" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">身份证号</label>
                    <div class="layui-input-block">
                        <input class="layui-input" value="@Model.IDCardNo" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">支付宝账号</label>
                    <div class="layui-input-block">
                        <input class="layui-input" value="@Model.AlipayAccount" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">微信账号</label>
                    <div class="layui-input-block">
                        <input class="layui-input" value="@Model.WeixinAccount" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">注册时间</label>
                    <div class="layui-input-block">
                        <input class="layui-input" value="@Model.CreateTime" />
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">状态</label>
                    <div class="layui-input-block">
                        @if (Model.State == 0)
                        {
                            <input class="layui-input" value="正常" />
                        }
                        else if (Model.State == 1)
                        {
                            <input class="layui-input" value="禁用" />
                        }
                        else if (Model.State == 2)
                        {
                            <input class="layui-input" value="删除" />
                        }
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">身份证照</label>
                    <div class="layui-input-block">
                        <a target="_blank" href="@Model.IDCardImg1"><img width="100" height="100" src="@Model.IDCardImg1" /></a>
                        <a target="_blank" href="@Model.IDCardImg2"><img width="100" height="100" src="@Model.IDCardImg2" /></a>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">房源地址</label>
                    <div class="layui-input-block">
                        <textarea class="layui-textarea">@Model.HouseAddress</textarea>
                    </div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">房产证照</label>
                    <div class="layui-input-block">
                        <a target="_blank" href="@Model.Housecertificate"><img width="100" height="100" src="@Model.Housecertificate" /></a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        layui.use('form', function () {
            var form = layui.form;
            form.render();
        });
    });
</script>
