<div class="house-release enter-edit">
    <form id="form1">
        <input type="hidden" name="ID" value="@Model.ID" />
        <table cellpadding="0" cellspacing="0" border="0" class="table-wrap">
            <tr>
                <td class="taright" width="215">房屋标题：</td>
                <td colspan="3">
                    <input id="txtHouseTitle" name="HouseTitle" value="@Model.HouseTitle" maxlength="100" type="text" class="text-input">
                </td>
            </tr>
            @*<tr style="display:none;">
                <td class="taright" width="215">房东：</td>
                <td colspan="3">
                    <select id="txtLandlor" name="LandlorId" style="width:316px; height:22px;" data-placeholder="请选择房东">
                        <option></option>
