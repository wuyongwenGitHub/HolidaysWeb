                <td class="taright" width="215">店铺：</td>
                <td colspan="3">
                    <select id="txtShop" name="ShopId" class="chosen-select " style="width:316px;height:22px;" data-placeholder="请选择店铺">
                        <option></option>
                        @if (ViewBag.ShopList != null)
                        {
                            foreach (var item in ViewBag.ShopList)
                            {
                                if (Model.ShopId == item.ID)
