@{
    ViewBag.Title = "修改密码";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>修改登录密码</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <form id="frmPassword" class="form-horizontal form-label-left" novalidate>
                    <div class="item form-group">
                        <label class="control-label col-md-4 col-sm-4 col-xs-12" for="oldPassword">
                            原来密码 <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            <input id="oldPassword" class="form-control col-md-7 col-xs-12" name="oldPassword" type="password">
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-4 col-sm-4 col-xs-12" for="newPassword">
                            新的密码 <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            <input id="newPassword" class="form-control col-md-7 col-xs-12" name="newPassword" type="password">
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-4 col-sm-4 col-xs-12" for="confirmPassword">
                            确认密码 <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            <input id="confirmPassword" class="form-control col-md-7 col-xs-12" name="confirmPassword" type="password">
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-5">
                            <button id="btnUpdatePassword" type="button" class="btn btn-success"> 修 改 </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $("#btnUpdatePassword").on("click", function () {
            var loadIndex = layer.load();
            var data = $("#frmPassword").serialize();
            $.post("/Admin/SystemSetting/UpdatePassword", data, function (result) {
                layer.close(loadIndex);

                if (result.Status == "ok") {
                    layer.alert(result.Msg, { icon: 1 }, function () {
                        window.location.reload();
                    });
                } else {
                    layer.alert(result.Msg, { icon: 2 });
                }
            });
        });
    </script>
}
